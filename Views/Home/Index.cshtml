@model YourProjectNamespace.ViewModels.TransactionViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-4">
    <h2>新增交易</h2>
    <form asp-action="Index" method="post">
        <div class="row mb-3">
            <label asp-for="NewTransaction.Category" class="col-sm-2 col-form-label">類別</label>
            <div class="col-sm-10">
                <select asp-for="NewTransaction.Category" class="form-select">
                    <option value="">請選擇</option>
                    <option>支出</option>
                    <option>收入</option>
                </select>
            </div>
        </div>
        <div class="row mb-3">
            <label asp-for="NewTransaction.Money" class="col-sm-2 col-form-label">金額</label>
            <div class="col-sm-10">
                <input asp-for="NewTransaction.Money" type="number" min="0" step="0" class="form-control" placeholder="金額" />
            </div>
        </div>
        <div class="row mb-3">
            <label asp-for="NewTransaction.Date" class="col-sm-2 col-form-label">日期</label>
            <div class="col-sm-10">
                <input asp-for="NewTransaction.Date" class="form-control" placeholder="日期" />
            </div>
        </div>
        <div class="row mb-3">
            <label asp-for="NewTransaction.Description" class="col-sm-2 col-form-label">備註</label>
            <div class="col-sm-10">
                <textarea asp-for="NewTransaction.Description" class="form-control" rows="3"></textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-primary">送出</button>
            </div>
        </div>
    </form>

    <h2 class="mt-4">交易列表</h2>
    <table class="table table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th>#</th>
                <th>類別</th>
                <th>金額</th>
                <th>日期</th>
                <th>備註</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Transactions)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Category</td>
                    <td>@item.Money.ToString("N0")</td>
                    <td>@item.Date.ToString("yyyy-MM-dd")</td>
                    <td>@item.Description</td>
                </tr>
            }
        </tbody>
    </table>
</div>